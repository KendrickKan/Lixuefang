page{
  background-color: #F5F5F5;
}

.post-container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;

}

.post-container .form{
  width: 100%;
  background: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 1rpx;
}

.textarea-content{
  padding: 15rpx;
}

.form .input{
  width: 95%;
  font-weight: 200;
  font-size: 30rpx;
}


.image-form{
  width: 95%;
  display: flex;
  flex-direction: column;
}

.image-form .select-image{
  width: 100%;
  display: flex;
  flex-direction: row;
  margin-bottom: 40rpx;
  flex-wrap:wrap;
}

.select-image .upload-image{
  width: 130rpx;
  height: 130rpx;
  margin-right: 10rpx;
  margin-top: 10rpx;
}

.select-image .image-item{
  position: relative;
}

.remove-image{
  width: 35rpx;
  height: 35rpx;
  position:absolute;
  top: 0rpx;
  left: 0rpx;
  z-index: 10;
  
}

.item{
  margin-left: 15rpx;
}


.location-image image{
  width: 60rpx;
  height: 60rpx;
  margin-top: 5rpx;
}


.button-container{
  display: flex;
  flex-direction: column;
  bottom: 0rxp;
}

.button-container{
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 80rpx;
  align-items: center;
  text-align: center;
}

.button-container .button{
  background: white;
  width: 95%;
  padding: 10rpx 10rpx;
}
button{
  background: #66CDAA;
  color: white;
  width: 95%;
}

/** 加载更多 **/

.get-more{
  height: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  font-size: 30rpx;
  font-weight: 200;
  width: 100%;
  background: white;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.get-more image{
  width: 40rpx;
  height: 40rpx;
}

.get-more .get-more-item{
  display: flex;
  flex-direction: row;
}

.loading{
  margin-left: 15rpx;
}

.no-more-data{
  width: 100%;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  justify-content: space-around;
  align-items: center;
  font-size: 25rpx;
  font-weight: 200;
  text-align: center;
  color: darkgray;
}
