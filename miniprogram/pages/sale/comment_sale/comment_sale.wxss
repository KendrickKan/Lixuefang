}

.comment-wall-item .comment-ref-user-container{
  width: 100%;
  display: flex;
  flex-direction: row;
}

.comment-ref-user-container image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 5rpx;
  border-radius:20rpx;
}

.comment-user{
  color: #0061b2;
}


.share-user-button .button{
  background: none !important;
  display: flex;
  flex-direction: row;
